@@ -5221,6 +5221,30 @@ parse_big_immediate (char **str, int i, expressionS *in_exp,
 
   my_get_expression (exp_p, &ptr, GE_OPT_PREFIX_BIG);
 
+  if (exp_p->X_op == O_big
+	   && exp_p->X_add_number < 0)
+    {
+      int j;
+      if (- exp_p->X_add_number == 'f' ||
+          - exp_p->X_add_number == 'g')
+        {
+          /* Emit an IEEE single/double precision floating point number. */
+          int prec = (- exp_p->X_add_number == 'f') ? 2 : 4;
+          int expo = (- exp_p->X_add_number == 'f') ? 8 : 11;
+          LITTLENUM_TYPE w[4];
+          gen_to_words(w, prec, expo);
+
+          offsetT imm = 0;
+          for (j = 0; j < prec; j++)
+            imm |= (offsetT) w[j]
+                   << (LITTLENUM_NUMBER_OF_BITS * (prec - j - 1));
+
+          exp_p->X_op = O_constant;
+          exp_p->X_add_number = imm;
+        }
+      else return FAIL;
+    }
+
   if (exp_p->X_op == O_constant)
